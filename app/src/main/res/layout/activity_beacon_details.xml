<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="everis.sema.es.dragonballradar.BeaconDetails"
    android:background="@drawable/bg"
    android:padding="18dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:paddingBottom="12dp">

        <TextView android:text="DirecciÃ³n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36dp"
            android:paddingBottom="10dp"
            android:id="@+id/tv_address"
            android:paddingTop="18dp"
            android:textColor="@android:color/white" />

        <TextView android:text="Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name"
            android:layout_marginLeft="12dp"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <TextView android:text="Major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_major"
            android:layout_marginLeft="12dp"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <TextView android:text="Minor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_minor"
            android:layout_marginLeft="12dp"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <TextView android:text="Distancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_distance"
            android:layout_marginLeft="12dp"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <TextView
            android:text="RSSI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rssi"
            android:layout_marginLeft="12dp"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <TextView
            android:text="UUID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_uuid"
            android:layout_marginLeft="12dp"
            android:textColor="@android:color/white"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView"
            android:src="@drawable/ball_detail" />
    </LinearLayout>

</LinearLayout>
